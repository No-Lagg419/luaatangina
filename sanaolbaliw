-- Auto Stop
local autoStop = Instance.new("TextButton")
autoStop.Size = UDim2.new(1, -10, 0, 22)
autoStop.Position = UDim2.new(0, 5, 0, 30)
autoStop.BackgroundColor3 = Color3.fromRGB(255, 99, 99)
autoStop.Text = "[A] Auto Stop: OFF"
autoStop.TextColor3 = Color3.fromRGB(255, 255, 255)
autoStop.Font = Enum.Font.SourceSansBold
autoStop.TextSize = 13
autoStop.Parent = mainFrame

local autoStopEnabled = false
autoStop.MouseButton1Click:Connect(function()
	autoStopEnabled = not autoStopEnabled
	autoStop.Text = "[A] Auto Stop: " .. (autoStopEnabled and "ON" or "OFF")
	autoStop.BackgroundColor3 = autoStopEnabled and Color3.fromRGB(144, 238, 144) or Color3.fromRGB(255, 99, 99)
end)

