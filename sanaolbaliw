local player = game.Players.LocalPlayer
local TweenService = game:GetService("TweenService")

-- GUI Setup
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "EggRandomizerGUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Transparent Intro Text
local introText = Instance.new("TextLabel")
introText.Size = UDim2.new(1, 0, 1, 0)
introText.Position = UDim2.new(0, 0, 0, 0)
introText.BackgroundTransparency = 1
introText.Text = "RAYFIELD SCRIPT"
introText.TextColor3 = Color3.fromRGB(255, 255, 255)
introText.TextTransparency = 1
introText.Font = Enum.Font.SourceSansBold
introText.TextSize = 36
introText.TextStrokeTransparency = 0.5
introText.ZIndex = 10
introText.Parent = screenGui

TweenService:Create(introText, TweenInfo.new(0.5), {TextTransparency = 0}):Play()
task.delay(1.5, function()
	TweenService:Create(introText, TweenInfo.new(0.5), {TextTransparency = 1}):Play()
end)
task.delay(2.1, function()
	introText:Destroy()
end)

-- Main Frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 230, 0, 185)
mainFrame.Position = UDim2.new(1, -240, 0.5, -90)
mainFrame.BackgroundColor3 = Color3.fromRGB(165, 42, 42)
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui
Instance.new("UICorner", mainFrame).CornerRadius = UDim.new(0, 8)

-- Header
local header = Instance.new("TextLabel")
header.Size = UDim2.new(1, -25, 0, 25)
header.BackgroundColor3 = Color3.fromRGB(144, 238, 144)
header.Text = "ðŸ¥š Egg Randomizer"
header.TextColor3 = Color3.fromRGB(255, 255, 255)
header.Font = Enum.Font.SourceSansBold
header.TextSize = 16
header.TextXAlignment = Enum.TextXAlignment.Left
header.Parent = mainFrame
Instance.new("UICorner", header).CornerRadius = UDim.new(0, 8)

-- Info Button
local infoButton = Instance.new("TextButton")
infoButton.Size = UDim2.new(0, 25, 0, 25)
infoButton.Position = UDim2.new(1, -25, 0, 0)
infoButton.BackgroundColor3 = Color3.fromRGB(100, 149, 237)
infoButton.Text = "?"
infoButton.TextColor3 = Color3.fromRGB(255, 255, 255)
infoButton.Font = Enum.Font.SourceSansBold
